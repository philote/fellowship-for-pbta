			{{#each system.attributes.destinyAdvancements.options as |option optionKey|}}
				<label
					class="flexrow"
					{{#if option.tooltip}}
						data-tooltip="{{option.tooltip}}"
						data-tooltip-direction="UP"
					{{/if}}
				>
					{{#if option.values}}
						{{#each option.values as |subOption subOptionKey|}}
							<input type="checkbox" class="attr-list" name="system.attributes.destinyAdvancements.options.{{optionKey}}.values.{{subOptionKey}}.value" {{checked subOption.value}}/>
						{{/each}}
					{{else}}
						<input type="checkbox" class="attr-list" name="system.attributes.destinyAdvancements.options.{{optionKey}}.value" {{checked option.value}}/>
					{{/if}}
					{{#if (eq option.label "[Text]")}}
						<input type="text" class="input input-title" name="system.attributes.destinyAdvancements.options.{{optionKey}}.userLabel" value="{{option.userLabel}}">
					{{else}}
						{{option.label}}
					{{/if}}
				</label>
			{{/each}}
		</ul>
	</div>
</div>
