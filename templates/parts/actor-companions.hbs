<div class='cell cell--companion cell--group'>
  <h2 class='cell__title'>
    <label class='item-group-label'>Companions</label>
    <div class='item-controls'>
      <button
        type='button'
        class='item-control item-create'
        data-type='fellowship-pbta.companion'
        data-companion-type='companion'
      >
        <i class='fas fa-plus'></i>
      </button>
    </div>
  </h2>
  <ol class='items-list'>
    {{#each actor.companions as |companion key|}}
      <li class='item flexcol' data-item-id='{{companion._id}}'>
        <div class='flexrow'>
          <h3 class='item-name'>{{companion.name}}</h3>
          <div class='item-controls'>
            <a class='item-control item-edit' title='Edit Item'><i class='fas fa-edit'></i></a>
            <a class='item-control item-delete' title='Delete Item'><i class='fas fa-trash'></i></a>
          </div>
        </div>
      </li>
    {{/each}}
  </ol>
</div>